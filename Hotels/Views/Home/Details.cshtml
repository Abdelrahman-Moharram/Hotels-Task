@model BooksListViewModel
@{
    ViewData["Title"] = "Details";
    int sum = 0;
    foreach (var room in Model.Rooms)
    {
        @(sum += (int)Enum.Parse(typeof(RoomTypes), room.RoomType))
    }
}

<h1>Details</h1>

<div class="card">
    <h5 class="card-header">@Model.BranchName</h5>
    <div class="card-body d-flex justify-content-between px-5">
        <div class="">
            <h5 class="card-title">@Model.CustomerName</h5>

            <div class="mt-5">
                @foreach(var room in @Model.Rooms)
                {
                    <div class="px-3">
                        @room.RoomType : <span style="font-weight:500"> @((int)Enum.Parse(typeof(RoomTypes), room.RoomType))</span>
                    </div>
                    @if(Model.Rooms.Last().Id != room.Id)
                    {
                        <div>+</div>
                    }
                }
                <hr class="text-black" />
                <div class="fw-bold">
                    <p> @sum EGP</p>
                    <span class="text-success">@Model.discount%</span>
                    <p>@((float)Model.TotalCost) EGP</p>
                </div>
            </div>

        </div>

        <div class="">
            <div class="mb-5">
                <span class="fw-bold d-block">CheckIn</span>
                @Model.CheckIn
            </div>
            <div>
                <span class="fw-bold d-block">CheckOut</span>
                @Model.CheckOut
            </div>
        </div>
        
        

    </div>
</div>

